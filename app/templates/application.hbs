{{#gh-app showSettingsMenu=ui.showSettingsMenu}}
    {{#gh-skip-link anchor=".gh-main"}}Skip to main content{{/gh-skip-link}}

    {{gh-alerts}}

    <div class="gh-viewport {{if ui.showSettingsMenu 'settings-menu-expanded'}} {{if ui.showMobileMenu 'mobile-menu-expanded'}}">
        {{#if showNavMenu}}
            {{gh-nav-menu
                icon=settings.settledIcon
            }}
        {{/if}}

        <main class="gh-main" role="main">
            <div class="gh-outlet-container">
                {{#if showNavMenu}}
                    <div class="flex justify-between items-center ml8 mr8 pt8 pb8 bb b--lightgrey">
                        <div class="midlightgrey-l1 fw1 flex items-center pa1 pl2 bg-white ba b--whitegrey br-pill" style="width: 280px;">{{svg-jar "search" class="w4 h4 fill-midlightgrey-l1 mr2"}} <span class="f7">Search site...</span></div>
                        <div class="flex items-center">
                            <div class="w9 h9 br-pill bg-purple white f6 fw6 flex items-center justify-center mr2">PZ</div>
                            <span class="midgrey">Peter Zimon</span>
                            {{svg-jar "arrow-down" class="nudge-top--2 ml2 w2 h2"}}
                        </div>
                    </div>
                {{/if}}

                {{outlet}}
            </div>
        </main>

        {{gh-notifications}}

        {{gh-content-cover}}

        {{gh-mobile-nav-bar}}
    </div>{{!gh-viewport}}
{{/gh-app}}

{{ember-load-remover}}
